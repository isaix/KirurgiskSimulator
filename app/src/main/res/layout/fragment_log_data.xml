<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logfragment"
    >
    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LogDataActivity"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/logName"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:background="@drawable/recyclerview_details_borderleft"
                    android:fontFamily="@font/asapregular"
                    android:gravity="center"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    android:textStyle="bold" />
              <!--  <TextView
                    android:id="@+id/logInstructorName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/recyclerview_details_noborder"
                    android:gravity="center"
                    android:text="Instructor"
                    android:textAlignment="center"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    android:textStyle="bold" />
                    !-->
                <TextView
                    android:id="@+id/logScenarioName"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="8"
                    android:background="@drawable/recyclerview_details_borderright"
                    android:fontFamily="@font/asapregular"
                    android:gravity="center"
                    android:text="ScenarioName"
                    android:textAlignment="center"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/logDate"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:background="@drawable/recyclerview_details_borderleft"
                    android:fontFamily="@font/asapregular"
                    android:gravity="center"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/logTime"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="8"
                    android:background="@drawable/recyclerview_details_noborder"
                    android:fontFamily="@font/asapregular"
                    android:gravity="center"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/logFailures"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@drawable/recyclerview_details_borderright"
                    android:fontFamily="@font/asapregular"
                    android:gravity="center"
                    android:text="Failures"
                    android:textAlignment="center"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    android:textStyle="bold" />


            </TableRow>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewLogData"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                app:stackFromEnd="true"
                app:reverseLayout="true"
                android:scrollbars="vertical"
                android:scrollbarSize="50dp"
                android:scrollbarStyle="insideOverlay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="8dp" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>