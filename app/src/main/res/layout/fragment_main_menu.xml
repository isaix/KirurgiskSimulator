<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="89dp">

        <Button
            android:id="@+id/student"

            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="80dp"

            android:layout_marginEnd="280dp"
            android:layout_marginStart="280dp"
            android:background="@drawable/details_login_buttons"
            android:shadowColor="#A8A8A8"
            android:shadowDx="-1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="Log In as student"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.679" />


        <Button
            android:id="@+id/Intructor"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="140dp"
            android:layout_marginEnd="280dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/details_login_buttons"
            android:shadowColor="#A8A8A8"
            android:shadowDx="-1"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="Log In as Instructor"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="324dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9"
            app:srcCompat="@drawable/cames" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="109dp"
            android:layout_height="115dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>