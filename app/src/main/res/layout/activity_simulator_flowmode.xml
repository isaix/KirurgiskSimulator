<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SimulatorActivity"
    tools:layout_editor_absoluteY="25dp">>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="163dp"
        android:layout_height="288dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/rate"
            android:layout_width="64dp"
            android:layout_height="57dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/black"
            android:fontFamily="@font/digital7"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="65sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.247" />

        <ProgressBar
            android:id="@+id/rateBar1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="17dp"
            android:layout_height="174dp"
            android:max="30"
            android:progress="25"
            android:progressDrawable="@drawable/progressbardetails"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="16dp" />

        <ProgressBar
            android:id="@+id/rateBar2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="17dp"
            android:layout_height="174dp"
            android:max="30"
            android:progress="10"
            android:progressDrawable="@drawable/progressbardetails"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/valuebar"
            android:layout_width="31dp"
            android:layout_height="178dp"
            android:text="30 \n \n \n 20 \n \n \n 10 \n \n \n 5 \n \n \n 0 "
            android:textAlignment="textEnd"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="I/min"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="118dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingminus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="#9ebf97"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/floatingplus2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@null"
            app:srcCompat="@drawable/minusbutton" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingplus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="#9ebf97"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@null"
            app:srcCompat="@drawable/plusbutton" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/icon2"
            tools:layout_editor_absoluteY="30dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>