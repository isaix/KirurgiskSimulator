<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screentwo"
    tools:context=".activities.SimulatorActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="428dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <include
            android:id="@+id/frame1"
            layout="@layout/activity_simulator_icon"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/frame2"
            layout="@layout/activity_simulator_indicator"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/frame3"
            layout="@layout/activity_simulator_flowmode"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/frame4"
            layout="@layout/activity_simulator_totalvol"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <TextView
        android:id="@+id/labelname"
        android:layout_width="244dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Thermoflater"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#D5D5C3"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>