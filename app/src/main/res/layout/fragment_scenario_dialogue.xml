<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_scenario_dialogue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="800dp"
    android:minHeight="165dp"
    android:orientation="vertical"
    tools:context=".fragments.ScenarioDialogueFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/scenarioPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:paddingBottom="15dp"
        android:scrollbars="horizontal" />

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="4sp"
        android:visibility="visible">

        <TextView
            android:id="@+id/air"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/recyclerview_details_avaliable_borderleft"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Air"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pressure2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Pressure"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pressurebar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Pressure Bar 1"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pressurebar2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Pressure Bar 2"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/rate2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Rate"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/ratebar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Rate Bar 1"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/ratebar2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Rate Bar 2"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/volume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Volume"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/nozzle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/recyclerview_details_avaliable_borderright"
            android:fontFamily="@font/asapregular"
            android:gravity="center"
            android:text="Nozzle"
            android:textColor="#fff"
            android:textSize="19sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/airPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/recyclerview_details_avaliable_borderleft"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pressurePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pressureBar1Preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/pressureBar2Preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/ratePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/rateBar1Preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/rateBar2Preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/volumePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@drawable/recyclerview_details_avaliable_noborder"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/nozzlePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/recyclerview_details_avaliable_borderright"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="19sp" />
    </TableRow>
</LinearLayout>