<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp">

    <Button
        android:id="@+id/surgeon"

        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="80dp"

        android:layout_marginEnd="280dp"
        android:layout_marginStart="280dp"
        android:background="@drawable/login_buttons"
        android:shadowColor="#A8A8A8"
        android:shadowDx="-1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="Log In as student"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />

    <Button
        android:id="@+id/surgeon2"

        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="140dp"

        android:layout_marginEnd="280dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/login_buttons"
        android:shadowColor="#A8A8A8"
        android:shadowDx="-1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="Log In as surgeon"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surgeon" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="86dp"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="66dp"
        app:layout_constraintBottom_toTopOf="@+id/surgeon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cames" />


</android.support.constraint.ConstraintLayout>