<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/progress">

        <clip
            android:clipOrientation="vertical"

            android:gravity="bottom">


            <shape>

                <corners
                    android:radius="10dp"/>


                <stroke
                    android:width="2px"

                    android:color="#000"/>



                <gradient
                    android:startColor="#d2262e"

                    android:centerColor="#a71920"

                    android:centerY="1.0"

                    android:endColor="#d2262e"

                    android:angle="270"/>

            </shape>

        </clip>

    </item>

</layer-list>

